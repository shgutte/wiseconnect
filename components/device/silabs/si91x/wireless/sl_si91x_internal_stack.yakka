name: Si91x network offload

sources:
  - sl_net/src/sl_si91x_net_internal_stack.c
  - icmp/sl_net_ping.c
  - firmware_upgrade/firmware_upgradation.c
  - sl_net/src/sl_si91x_net_credentials.c

includes:
  global:
    - sl_net/inc
    - icmp
    - firmware_upgrade
    
defines:
  global:
    - SI91X_NETWORK_OFFLOAD_ENABLED

supports:
  components:
    mqtt:
      includes:
        global:
          - inc/mqtt/inc
    sntp:
      includes:
        global:
          - inc/sntp
    http_client:
      includes:
        global:
          - inc/http_client/inc
      sources:
        - src/sl_si91x_http_client_callback_framework.c

suds:
  wiseconnect-api-reference-guide-fw-upgrade:
    version: "3.0.0"
    authors:
      - aji.gerdiman@silabs.com
      - nik.vonhuben@silabs.com
    contentType: doxygen
    title: "Firmware Upgrade"
    description: "Firmware Upgrade"

doxygen:
  project_name: "Firmware Upgrade APIs"
  inputs:
    - firmware_upgrade/
    - docs/doxygen_firmware_upgrade_indexfile.md
    - docs/doxygen_firmware_upgrade_template.h

slc:
  label: 'Offloaded Internal Stack'
  description: 'This component offloads the network stack to the Si91x Wireless Subsystem'
  category: 'Device|Si91x|Wireless|Network Stack'
  provides:
    - name: si91x_networking_model
  conflicts:
    - name: sl_si91x_lwip_stack
  include:
    - path: icmp
      file_list:
        - sl_net_ping.h
    - path: firmware_upgrade
      file_list:
        - firmware_upgradation.h
    - path: inc/http_client/inc
      file_list:
        - sl_si91x_http_client_callback_framework.h
      condition:
        - http_client
    - path: inc/mqtt/inc
      file_list:
        - si91x_mqtt_client_callback_framework.h 
        - si91x_mqtt_client_types.h 
        - si91x_mqtt_client_utility.h
      condition:
        - mqtt
    - path: inc/sntp
      file_list:        
        - si91x_sntp_client_callback_framework.h 
        - si91x_sntp_client_types.h
      condition:
        - sntp
