#include "sl_si91x_i2c.h"
{% for inst in i2c_instances %}
#include "sl_si91x_i2c_init_{{ inst }}_config.h"
{% endfor %}

#include "sl_i2c_instances.h"

{% for inst in i2c_instances %}
sl_i2c_config_t sl_i2c_{{ inst }}_config = {
  .mode = SL_I2C_{{ inst | upper }}_MODE,
  .operating_mode = SL_I2C_{{ inst | upper }}_OPERATING_MODE,
  .transfer_type = SL_I2C_{{ inst | upper }}_TRANSFER_TYPE,
};
{% endfor %}

{% for inst in pwm_instances %}
sl_i2c_init_t sl_i2c_{{ inst }}_init = {
  .port_l = SL_I2C_{{ inst | upper }}_PORT_L,
  .pin_l = SL_I2C_{{ inst | upper }}_PIN_L,
  .port_h = SL_I2C_{{ inst | upper }}_PORT_H,
  .pin_h = SL_I2C_{{ inst | upper }}_PIN_H,
  .mux_l = SL_I2C_{{ inst | upper }}_MUX_L,
  .mux_h = SL_I2C_{{ inst | upper }}_MUX_H,
  .pad_l = SL_I2C_{{ inst | upper }}_PAD_L,
  .pad_h= SL_I2C_{{ inst | upper }}_PAD_H,
};
{% endfor %}

{% for inst in pwm_instances %}
sl_i2c_fault_init_t sl_i2c_{{ inst }}_event_init = {
  .port = SL_I2C_{{ inst | upper }}_PORT,
  .pin = SL_I2C_{{ inst | upper }}_PIN,
  .mux = SL_I2C_{{ inst | upper }}_MUX,
  .pad = SL_I2C_{{ inst | upper }}_PAD,
};
{% endfor %}


void sl_i2c_init_instances(void)
{
{% for inst in pwm_instances %}

  sl_si91x_i2c_init(&sl_i2c_{{ inst }}_init);
  
  sl_si91x_i2c_fault_init(&sl_i2c_{{ inst }}_event_init);
  
  sl_si91x_i2c_set_configuration(&sl_i2c_{{ inst }}_config);
  
{% endfor %}
}
