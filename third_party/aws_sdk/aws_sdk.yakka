name: AWS SDK

clang-format: false

includes:
  global:
    - include
    - platform/silabs/inc

sources:
  - src/aws_iot_jobs_interface.c 
  - src/aws_iot_jobs_json.c
  - src/aws_iot_jobs_topics.c
  - src/aws_iot_jobs_types.c
  - src/aws_iot_json_utils.c
  - src/aws_iot_mqtt_client_common_internal.c
  - src/aws_iot_mqtt_client_connect.c
  - src/aws_iot_mqtt_client_publish.c   
  - src/aws_iot_mqtt_client_subscribe.c   
  - src/aws_iot_mqtt_client_unsubscribe.c 
  - src/aws_iot_mqtt_client_yield.c
  - src/aws_iot_mqtt_client.c   
  - src/aws_iot_shadow_actions.c
  - src/aws_iot_shadow_json.c    
  - src/aws_iot_shadow_records.c                                 
  - src/aws_iot_shadow.c
  - src/jsmn.c
  - platform/silabs/src/network_sl_api_wrapper.c
  - platform/silabs/src/timer.c

requires:
  features:  
    - sockets

slc:
  label: 'AWS IoT Library'
  description: 'AWS IoT Library'
  category: 'Third Party'
  requires:
    - name: bsd_socket
  include:
    - path: include
      file_list:        
        - aws_iot_error.h
        - aws_iot_jobs_interface.h 
        - aws_iot_jobs_json.h 
        - aws_iot_jobs_topics.h 
        - aws_iot_jobs_types.h 
        - aws_iot_json_utils.h 
        - aws_iot_log.h 
        - aws_iot_mqtt_client_common_internal.h 
        - aws_iot_mqtt_client_interface.h 
        - aws_iot_mqtt_client.h 
        - aws_iot_shadow_actions.h 
        - aws_iot_shadow_interface.h 
        - aws_iot_shadow_json_data.h 
        - aws_iot_shadow_json.h 
        - aws_iot_shadow_key.h 
        - aws_iot_shadow_records.h 
        - aws_iot_version.h
        - jsmn.h
    - path: platform/silabs/inc
      file_list:        
        - timer_platform.h 
        - timer_interface.h 
        - network_interface.h